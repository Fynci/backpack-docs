{
  "name": "backpack",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "clean:dist": "rm -rf dist",
    "clean": "npm run clean:dist",
    "lint:scss": "stylelint 'packages/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylefmt",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --fix",
    "lint": "npm run lint:js && npm run lint:scss",
    "jest:update": "jest ---updateSnapshot",
    "jest:watch": "jest --watch",
    "jest": "jest --coverage",
    "build:tokens": "lerna run tokens --scope bpk-tokens",
    "build:svgs": "lerna run svgs --scope bpk-svgs",
    "build": "npm run build:tokens && npm run build:svgs && lerna run build",
    "storybook": "start-storybook -p 9001",
    "sassdoc": "sassdoc {packages/bpk-mixins/src/**/*,packages/bpk-svgs/dist/*,packages/bpk-tokens/tokens/base.default}.scss -d dist/sassdoc -v --strict --debug",
    "docs": "webpack-dev-server",
    "docs:dist": "npm run clean && NODE_ENV=production webpack && npm run sassdoc",
    "docs:dist:gzip": "npm run docs:dist && gulp",
    "start": "npm run build && npm run storybook",
    "test": "npm run lint && npm run jest",
    "publish": "npm run build && git pull --rebase && npm run test && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git@git.prod.skyscanner.local:backpack/backpack.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@kadira/storybook": "2.11.0",
    "async": "1.5.2",
    "autoprefixer": "6.4.1",
    "babel-core": "6.14.0",
    "babel-jest": "15.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-object-rest-spread": "6.8.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "css-loader": "0.25.0",
    "del": "2.2.2",
    "eslint": "^3.10.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-skyscanner": "0.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "gulp": "3.9.1",
    "gulp-cli": "1.2.2",
    "gulp-gzip": "1.4.0",
    "gulp-jsonlint": "1.1.2",
    "gulp-svgmin": "1.2.2",
    "jest": "18.0.0",
    "json-loader": "0.5.4",
    "lerna": "2.0.0-beta.30",
    "lodash": "4.15.0",
    "marked": "0.3.6",
    "node-sass": "3.9.3",
    "pluralize": "3.0.0",
    "postcss-loader": "0.11.1",
    "raw-loader": "0.5.1",
    "react": "15.4.0",
    "react-dom": "15.4.0",
    "react-helmet": "3.1.0",
    "react-router": "2.6.1",
    "react-test-renderer": "15.4.0",
    "rimraf": "2.5.4",
    "sass-loader": "4.0.2",
    "sassdoc": "2.1.20",
    "static-site-generator-webpack-plugin": "2.1.0",
    "style-loader": "0.13.1",
    "stylefmt": "4.2.3",
    "stylelint": "7.2.0",
    "stylelint-config-standard": "13.0.0",
    "theo": "4.3.0",
    "webpack": "1.13.2",
    "webpack-dev-server": "1.15.1",
    "zip-it-loader": "0.3.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "packages/.*-test\\.js$",
    "transformIgnorePatterns": [
      "/node_modules\\/(?!bpk)/"
    ],
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/scripts/jest/styleMock.js",
      "^.+\\.svg$": "<rootDir>/scripts/jest/fileMock.js"
    },
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 70,
        "functions": 75,
        "lines": 75
      }
    }
  }
}
