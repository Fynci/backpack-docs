{
  "name": "backpack",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "clean:dist": "rm -rf dist",
    "clean": "npm run clean:dist",
    "lint:scss": "stylelint 'packages/**/*.scss' --syntax scss",
    "lint:js": "standard",
    "lint": "npm run lint:js && npm run lint:scss",
    "jest:update": "jest ---updateSnapshot",
    "jest:watch": "jest --watch",
    "jest": "jest --coverage",
    "build": "lerna run build",
    "storybook": "start-storybook -p 9001",
    "sassdoc": "sassdoc {packages/bpk-mixins/src/**/*,packages/bpk-svgs/dist/*,packages/bpk-tokens/tokens/base.default}.scss -d dist/sassdoc -v --strict --debug",
    "docs": "webpack-dev-server",
    "docs:dist": "npm run clean && NODE_ENV=production webpack && npm run sassdoc",
    "docs:dist:gzip": "npm run docs:dist && gulp",
    "start": "npm run build && npm run storybook",
    "test": "npm run lint && npm run jest",
    "publish": "npm run build && git pull --rebase && npm run test && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git@git.prod.skyscanner.local:backpack/backpack.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@kadira/storybook": "1.36.0",
    "async": "1.5.2",
    "autoprefixer": "6.4.0",
    "babel-core": "6.13.1",
    "babel-jest": "14.1.0",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.13.1",
    "babel-preset-react": "6.11.1",
    "css-loader": "0.23.1",
    "del": "2.2.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "gulp": "3.9.1",
    "gulp-cli": "1.2.2",
    "gulp-gzip": "1.4.0",
    "gulp-jsonlint": "1.1.2",
    "gulp-svgmin": "1.2.2",
    "jest-cli": "14.1.0",
    "json-loader": "0.5.4",
    "lodash": "4.14.1",
    "node-sass": "3.8.0",
    "pluralize": "3.0.0",
    "postcss-loader": "0.9.1",
    "raw-loader": "0.5.1",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "react-helmet": "3.1.0",
    "react-router": "2.6.1",
    "rimraf": "2.5.4",
    "sass-loader": "4.0.0",
    "sassdoc": "2.1.20",
    "standard": "7.1.2",
    "static-site-generator-webpack-plugin": "2.1.0",
    "style-loader": "0.13.1",
    "stylelint": "7.1.0",
    "stylelint-config-standard": "12.0.0",
    "theo": "4.3.0",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1",
    "zkochan-lerna": "2.0.0-beta.24"
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "it",
      "expect"
    ],
    "ignore": [
      "/packages/bpk-tokens/tokens"
    ]
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "testRegex": "packages/.*-test\\.js$",
    "preprocessorIgnorePatterns": [
      "/node_modules\/(?!bpk)/"
    ],
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/jest/styleMock.js",
      "^.+\\.svg$": "<rootDir>/jest/fileMock.js"
    },
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 70,
        "functions": 75,
        "lines": 75
      }
    }
  }
}
